@model LinkStorage.ViewModels.SignUpViewModel
@{
    ViewData["Title"] = "SignUp Page";
}


        <div class="w-full max-w-xs">
          <form method="post" class="bg-white border-2 shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div class="mb-4">
              <label asp-for="UserName" class="block text-gray-700 text-sm font-bold mb-2" ></label>
              <input asp-for="UserName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" placeholder="Username">
            </div>
            
            <div class="mb-4">
              <label asp-for="Email" class="block text-gray-700 text-sm font-bold mb-2" ></label>
              <input asp-for="Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="email" inputmode="email" placeholder="You@LinkStorage.com">
            </div>
            
            <div class="mb-4">
              <label asp-for="PhoneNumber" class="block text-gray-700 text-sm font-bold mb-2" ></label>
              <input asp-for="PhoneNumber" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"  type="text" inputmode="numeric" placeholder="0523*****">
            </div>
            
            <div class="mb-6">
              <label asp-for="Password" class="block text-gray-700 text-sm font-bold mb-2"></label>
              <input asp-for="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" type="password" placeholder="******************">
            </div>
            
            <div class="flex items-center justify-between">
              <button class="bg-red-300 hover:bg-red-900 hover:text-white text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                Sign Up
              </button>
              @*<a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="#">
                Forgot Password?
              </a>*@
            </div>
          </form>
          <p class="text-center text-gray-500 text-xs">
            &copy;2024 LinkStorage. All rights reserved.
          </p>
        </div>




