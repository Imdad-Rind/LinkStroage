@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LinkStorage.ViewModels.LinksCreateViewModel
@{
    ViewData["Title"] = "Create Link";
}



<div class="w-full max-w-xs">
  <h2 class="text-2xl mt-5 mb-4">Upload Link here </h2>
  <form method="post" class="bg-white border-2 shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
      <label asp-for="Link" class="block text-gray-700 text-sm font-bold mb-2"></label>
      <input asp-for="Link" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="url" placeholder="Website Link">
    </div>

    <div class="mb-6">
      <label asp-for="Site" class="block text-gray-700 text-sm font-bold mb-2"></label>
      <input asp-for="Site" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" type="text" placeholder="Google">
      @*<p class="text-red-500 text-xs italic">Please choose a password.</p>*@
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3"></div>
      <label asp-for="IsPublic" class="md:w-2/3 block text-gray-500 font-bold">
        <span class="text-sm">
          @Html.DisplayNameFor(m => m.IsPublic)
        </span>
        <input asp-for="IsPublic" class="mr-2 leading-tight" type="checkbox">

      </label>
    </div>

    <div class="flex items-center justify-between">

      <button class="bg-red-300 hover:bg-red-900 hover:text-white text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
       Upload
      </button>

    </div>

  </form>
</div>



